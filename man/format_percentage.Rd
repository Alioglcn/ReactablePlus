\name{format_percentage}
\alias{format_percentage}
\title{Format Percentage Values}
\description{
This function formats numeric values as percentages.
}
\usage{
format_percentage(value)
}
\arguments{
\item{value}{A numeric value to be formatted.}
}
\value{
A formatted percentage value.
}
\examples{
format_percentage(0.15)
}
